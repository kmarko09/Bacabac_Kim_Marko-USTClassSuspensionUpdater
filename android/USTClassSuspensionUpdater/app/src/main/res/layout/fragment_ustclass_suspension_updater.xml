<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".USTClassSuspensionUpdater$PlaceholderFragment"
    android:background="@drawable/c">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="G O  U S T e ! ! ! "
        android:id="@+id/goUste"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:textColor="#fffeff0d"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UNIVERSITY OF SANTO TOMAS"
        android:id="@+id/UST"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/goUste"
        android:layout_alignEnd="@+id/goUste"
        android:gravity="center_horizontal"
        android:textColor="#fffffc09"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENTER "
        android:id="@+id/button"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/goUste"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:textStyle="bold|normal"
        android:textColor="#ff000000"
        android:onClick="sendMessage"
        android:hint="Enter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="W E L C O M E"
        android:id="@+id/textView"
        android:layout_above="@+id/button"
        android:layout_marginBottom="125dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:typeface="monospace"
        android:textColor="#fffff10e"
        android:linksClickable="false"
        android:textStyle="bold" />

</RelativeLayout>


